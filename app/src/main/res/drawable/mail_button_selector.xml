<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- 相当于padding -->
            <item>
                <shape>
                    <solid android:color="@color/major_color" />
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="@android:color/white" android:dashGap="1dp" android:dashWidth="1dp" />
                    <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/gray" />
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="@android:color/white" android:dashGap="1dp" />
                    <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>