<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <!-- 相当于padding -->
            <item android:left="-1dp" android:right="-1dp" android:top="-1dp">
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
                    <stroke android:width="1dp" android:color="@color/tab_text" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item  android:right="-1dp" android:top="-1dp">
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
                    <stroke android:width="1dp" android:color="@color/sub_text_color" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>