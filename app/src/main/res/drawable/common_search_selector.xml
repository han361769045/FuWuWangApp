<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>

            <!-- 相当于padding -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" />

                    <corners android:radius="100dp" />

                    <stroke android:width="2dp" android:color="#fbe970" android:dashGap="0dp" android:dashWidth="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ffffff" />

                    <corners android:radius="100dp" />

                    <stroke android:width="2dp" android:color="#e2e2e2" android:dashGap="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>