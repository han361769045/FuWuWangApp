<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.zczczy.leo.fuwuwangapp.viewgroup.MyTitleBar
        android:id="@+id/my_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/major_color"
        android:minHeight="50dp"
        app:mNavButtonIcon="@drawable/title_back_normal"
        app:mTitle="@string/txt_member_info"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_shadow_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:text="头像"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/default_header"/>

        <ImageView
            android:id="@+id/img_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/next_icon"/>

    </RelativeLayout>

    <include layout="@layout/horizontal_line"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_shadow_selector"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="真实姓名:"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="top|right"
            android:singleLine="true"
            android:textSize="16dp"/>
    </LinearLayout>

    <include layout="@layout/horizontal_line"/>

    <LinearLayout
        android:id="@+id/ll_companyarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_shadow_selector"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="邮箱:"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="top|right"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textSize="16dp"/>
    </LinearLayout>

    <include layout="@layout/horizontal_line"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_shadow_selector"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="QQ:"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/edt_qq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="top|right"
            android:singleLine="true"
            android:textSize="16dp"/>
    </LinearLayout>

    <include layout="@layout/horizontal_line"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_shadow_selector"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="微博:"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/edt_blog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="top|right"
            android:singleLine="true"
            android:textSize="16dp"/>
    </LinearLayout>

    <include layout="@layout/horizontal_line"/>

    <LinearLayout
        android:id="@+id/ll_shipping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_shadow_selector"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/txt_province"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="收货地址:"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/txt_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:ellipsize="end"
            android:gravity="top|right"
            android:maxEms="10"
            android:singleLine="true"
            android:text=""
            android:textSize="16dp"/>
    </LinearLayout>

    <include layout="@layout/horizontal_line"/>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_selector"
        android:padding="15dp"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="17dp"/>

</LinearLayout>