<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/cb_store_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/cart_store_icon"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/next_icon"
            android:ellipsize="end"
            android:ems="10"
            android:maxLines="1"
            android:text="阿德法撒旦阿德法撒旦法地方法地方" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/my_title_bar"
        android:layout_alignTop="@+id/ll_cart_jiesuan" />

</LinearLayout>